{erl_opts, [debug_info, warnings_as_errors, {parse_transform, lager_transform}]}.
{deps,
  [
   {ranch, "~>1.2.1"},
   {hackney, "~>1.6.0"},
   {mmath, "0.2.0-alpha1"},
   {dqe_idx, "~>0.1.12"},
   {dp_decoder, "~>0.2.0"},
   {dqe_idx_pg, "~>0.1.18"},
   {ddb_client, "~>0.1.20"}
  ]}.

{plugins, [rebar3_auto]}.
{relx, [{release, { ddb_proxy, "0.1.0" },
         [ddb_proxy,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
